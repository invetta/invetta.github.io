// Kontakt
a(name='kontakt')
.i-content.i-bg-letter.i-bg-white
  .container
    .row.i-content-space-small
      .col.s5.offset-s7.i-light.center-align.i-col-form
        h3 Napisz do nas
        h2 Formularz kontaktowy
        form(method='post', action='http://formspree.io/biuro@invetta.pl')
          input(type='email', name='email', placeholder='Twój e-mail')
          input(type='text', name='temat', placeholder='Temat wiadomości')
          textarea(placeholder='Treść wiadomości', rows='4', name='wiadomość')
          button.i-btn(type='submit') Wyślij
